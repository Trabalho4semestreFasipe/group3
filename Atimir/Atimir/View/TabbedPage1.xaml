<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Atimir.View.TabbedPage1">
    <!--Pages can be added as references or inline-->
    <ContentPage>
        <StackLayout>
            
            <StackLayout BackgroundColor="Azure">
                <Button Text="Inserir Desejo" TextColor="DarkGreen"  Clicked="Button_OnClicked"/>
            </StackLayout>
            
            <StackLayout BackgroundColor="Azure">
                <Button Text="Detalhes do Desejo" TextColor="DarkGray" Clicked="Button_OnClicked"/>
            </StackLayout>
            
            <StackLayout BackgroundColor="Azure">
                <Button Text="Alterar Desejo" TextColor="DarkMagenta" Clicked="Button_OnClicked"/>
            </StackLayout>
                
        </StackLayout>
    </ContentPage>
</TabbedPage>